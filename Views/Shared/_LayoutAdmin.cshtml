@using CeniraBiblioteca.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CENIRA</title>

    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/styles.css" rel="stylesheet">
    @RenderSection("estilos", required: false)
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    <div class="logo">
                        <h1>@Html.ActionLink("Cenira Administracion", "Index")</h1>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                                    <ul class="dropdown-menu animated fadeInUp">
                                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                                        <li>@Html.ActionLink("Salir", "Logout", "Account")</li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="content-box-header text-center">Menu</div>
                <div class="sidebar content-box box-with-header" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li>@Html.MenuItem("Inicio", "Index", "Admin")</li>
                        <li>@Html.MenuItem("Editar Libros", "Libros", "Admin")</li>
                        <li>@Html.MenuItem("Editar Categorias", "Categorias", "Admin")</li>
                        <li>@Html.MenuItem("Editar Pedidos", "Pedidos", "Admin")</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                 @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="copy text-center">
                Copyright 2014 @Html.ActionLink("Cenira", "Index", "Home")
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/admin/js/custom.js"></script>   
    @RenderSection("scripts", required: false)
</body>

</html>
