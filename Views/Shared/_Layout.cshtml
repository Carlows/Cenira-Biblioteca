<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CENIRA</title>
    @Styles.Render("~/Content/css")
    @RenderSection("estilos", required: false)
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CENIRA", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Buscar Libros", "Search", "Home")</li>
                    <li>@Html.ActionLink("Equipo", "Team", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="body-content">
        @RenderBody()
        <footer>
            <div class="container" style="margin-top:50px;">
                <p style="float:left;"><b>Universidad Tecnológica del Centro</b></p> <p class="text-right"><b>CIT - Celula Biblioteca</b></p>
                <a href="http://www.unitec.edu.ve/" style="float:left;">http://www.unitec.edu.ve/</a> <p class="text-right"><b>V. 0.0.1.</b></p>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>