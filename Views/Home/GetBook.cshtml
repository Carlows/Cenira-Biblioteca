@model CeniraBiblioteca.Models.Book

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title text-center" id="myModalLabel">Detalles del libro</h4>
</div>
<div class="modal-body">
        <div class="row">
            <div class="col-md-5">
                <img class="img-responsive img-rounded" src="@Model.ImageURL">
            </div>
            <div class="col-md-7">
                <h4>@Model.Name</h4>
                <hr />
                <p>@Model.Description</p>
                <hr />
                <div>
                    <label>Editorial: @Model.Publisher</label>
                </div>
                <div>
                    <label>Edicion: @Model.Edition</label>
                </div>
                <div>
                    <label>Paginas: @Model.Pages</label>
                </div>
                <div>
                    <label><b>Autor: @Model.Author</b></label>
                </div>
            </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Save changes</button>
</div>
