@model CeniraBiblioteca.Models.Category

@{
    ViewBag.Title = "EditCat";
}
@section estilos{
    <style>
        textarea {
            resize: none;
        }
    </style>
}
<div class="col-md-6">
    <div class="content-box-header">
        <div class="panel-title">Editar</div>
    </div>
    <div class="content-box-large box-with-header">
        @using (Html.BeginForm("EditCat", "Admin"))
        {
            @Html.ValidationSummary()

            @Html.HiddenFor(c => c.CategoryID)

            <div class="form-group">
                <label>@Html.DisplayNameFor(b => b.CategoryName)</label>
                @Html.TextBoxFor(b => b.CategoryName, null, new { @class = "form-control" })
            </div>

            <input type="submit" value="Guardar" class="btn btn-primary" />
            @Html.ActionLink("Cancelar y volver a la lista", "Categorias", null, new { @class = "btn btn-default" })
        }
    </div>
</div>


