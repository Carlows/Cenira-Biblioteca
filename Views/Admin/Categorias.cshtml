@model IEnumerable<CeniraBiblioteca.Models.Category>
@using CeniraBiblioteca.Models
@{
    ViewBag.Title = "Categorias";
}

<div class="col-md-10">
    @if (TempData["message"] != null)
    { <div class="alert alert-info alert-block">@TempData["message"]</div> }
    <div class="content-box-header">
        <div class="panel-title">Administrar Categorias</div>
    </div>
    <div class="content-box-large box-with-header">
        <div>@Html.ActionLink("Agregar Categoria", "CreateCat", "Admin", null, new { @class = "btn btn-default btn-lg" })</div>
        <hr />
        <table class="table table-striped table-hover table-overflow">
            <thead>
                <tr class="info">
                    <th width="10%">ID</th>
                    <th width="30%">Name</th>
                    <th width="10%"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (Category c in Model)
                    {
                        <tr>
                            <td style="vertical-align: middle;">@c.CategoryID</td>
                            <td class="text-overflow" style="vertical-align: middle;">@Html.ActionLink(@c.CategoryName, "EditCat", new { id = c.CategoryID })</td>
                            <td>
                                @using (Html.BeginForm("DeleteCat", "Admin"))
                                {
                                    @Html.Hidden("id", c.CategoryID)
                                    <input type="submit"
                                           class="btn btn-default"
                                           value="Borrar" />
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>

